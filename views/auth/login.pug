extends ../layout/common

block content
    h1 Login
    if errors
        each error in errors   
            .alert.alert-danger=error
    form(action="", method="POST")
        .form-group
            label(for="email") Email
            input#name.form-control(name="email", type="email", value=values ? values.email : "")

        .form-group
            label(for="password") Password
            input#phone.form-control(name="password", type="password", value=values ? values.password : "")
        button.btn.btn-primary Login