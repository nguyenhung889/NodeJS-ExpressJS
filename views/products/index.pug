extends ../layout/common

block content
    h1
        span.mr-3 Products
        //a.btn.btn-primary(href="/users/create") New

    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="GET", class="d-flex")
            input#formGroupExampleInput.form-control(type='text', name="q", class="form-control")
            button(class="btn btn-primary ml-2") Search
    .row
        each product in products
            .col-lg-4.col-md-4.px-10.py-10
                .card(style='width: 18rem;')
                    img.card-img-top(src=product.image, alt='Card image cap')
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        a.btn.btn-primary(href='#') Add to cart